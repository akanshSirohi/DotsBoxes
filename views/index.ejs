<div class="container mt-5">
  <div class="row">
    <div class="col-lg-2"></div>
    <div class="col-lg-8 text-center">
      <div class="card border-primary mb-3">
        <h3 class="card-header">Dots & Boxes Dual Player</h3>
        <div class="card-body" style="padding-bottom: 0">
          <h5 class="card-title">Welcome Onboard!</h5>
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              placeholder="Your name..."
              id="name"
            />
          </div>
          <hr />
          <div class="row">
            <div class="col-sm-5">
              <div class="form-group">
                <div class="input-group">
                  <input
                    type="text"
                    class="form-control"
                    placeholder="Code"
                    id="gid"
                  />
                  <div class="input-group-append">
                    <button type="button" class="btn btn-primary" id="j_btn">
                      <i class="fas fa-door-open"></i>&nbsp;Join
                    </button>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-2 text-center align-middle">
              <h4>OR</h4>
            </div>
            <div class="col-sm-5">
              <div class="input-group mb-3">
                <select class="custom-select" id="gSize">
                  <option value="3">3 X 3</option>
                  <option value="5" selected>5 X 5</option>
                  <option value="8">8 X 8</option>
                </select>

                <div class="input-group-append">
                  <button
                    type="button"
                    style="width: 100%"
                    class="btn btn-primary"
                    id="c_btn"
                  >
                    <i class="fas fa-plus-square"></i>&nbsp;Create Game
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer text-center">
            Made with <i class="fas fa-heart" style="color: red"></i> by Akansh
            Sirohi
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>
  <script>
    $(document).ready(() => {
      let data = getData();
      if (data != null) {
        $("#name").val(data.name);
      }
      $("#name").on("input", (e) => {
        let d = getData();
        if (d != null) {
          d.name = e.delegateTarget.value;
        } else {
          d = {
            name: e.delegateTarget.value,
          };
        }
        putData(d);
      });
      $("#j_btn").click(() => {
        let n = $("#name").val();
        if (n.length > 2) {
          let gid = $("#gid").val();
          gid = gid.toLowerCase();
          let dd = getData();
          if (dd != null) {
            if (dd.gameStarted) {
              if (dd.gameCode != gid) {
                putData({ name: dd.name });
              }
            }
          }
          window.location.href = `/game?code=${gid}`;
        } else {
          alert("Please enter valid name!");
        }
      });
      $("#c_btn").click(() => {
        let n = $("#name").val();
        let gSize = $("#gSize").val();
        if (n.length > 2) {
          let dd = getData();
          if (dd.gameStarted) {
            putData({ name: dd.name });
          }
          let gid = $("#gid").val();
          if (gid.startsWith("$")) {
            gid = gid.replace("$", "");
            window.location.href = `/game?secret=${gid}&size=${gSize}`;
          } else {
            window.location.href = `/game?size=${gSize}`;
          }
        } else {
          alert("Please enter valid name!");
        }
      });
    });
  </script>
</div>
